<%layout("./layouts/boilerplate")%>
<div class="row mt-3">
    <h1 class="col-6 offset-3 text-muted" style="color: royalblue !important;">Login</h1>
    <div class="col-6 offset-3">
        <form autocomplete="off" method="post" action="/login" class="needs-validation" novalidate >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  autocomplete="false"
                  type="text"
                  id="username"
                  name="username"
                  class="form-control"
                  required
                  placeholder="username"
                />
                </div>
             <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  required
                  placeholder="password"
                />
                </div>
                <button class="btn btn-primary ">Login</button>
        </form>
    </div>
</div>